# FusionAuth OAuth Configuration
# Get these values from your colleague after creating an OAuth Application in FusionAuth

# Client ID from FusionAuth Application
OAUTH_CLIENT_ID=your-client-id-here

# Client Secret from FusionAuth Application
OAUTH_CLIENT_SECRET=your-client-secret-here

# FusionAuth OAuth endpoints
OAUTH_AUTHORIZE_URL=https://auth.beltche.com/oauth2/authorize
OAUTH_TOKEN_URL=https://auth.beltche.com/oauth2/token

# Your ngrok URL (update this when you start ngrok)
OAUTH_REDIRECT_BASE=https://your-ngrok-url.ngrok-free.app

# Server port
PORT=3000
